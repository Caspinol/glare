<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <link href="stylesheets/style.css" rel="stylesheet">
  </head>
  <body>
    
    <!-- navigation bar section -->
    
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
	      <div class="navbar-header">
	        <a href="/"><h1>GLARE
	            <small> - log viewer</small>
	        </h1></a>
	      </div>
        <div class="navbar-right">
          <form class="navbar-form" method="POST" action="/command">
            <% if(command === 'tail'){ %>
            <input type="hidden" name="cmd" value="less">
            <input type="submit" class="btn btn-sm navbar-btn" value="less">
            <% }else{ %>
            <input type="hidden" name="cmd" value="tail">
            <input type="submit" class="btn btn-sm navbar-btn" value="tail">
            <% } %>
          </form>
          <ul class="nav">
            <li><label>Current file: "<%= current_file %>"</label></li>
            <li><label>Current search term: "<%= current_grep %>"</label></li>
          </ul>
        </div>
	      <div class="navbar-right">
	        <form class="navbar-form" method="POST" action="/grep">
	          <label class="" for="search"><b>Search</b></label>
	          <input type="text" class="text" name="search"/>
	          <input class="btn btn-sm navbar-btn" type="submit" value="Search"/>
	        </form>
	      </div>
      </div>
    </div>
    
    <!-- body layout -->
    
    <div class="container-fluid">
      
      <div class="row">
	      
	      <div id="directory" class="col-md-3 sidebar">
	        <h2 class="page-header">Files
	          <small>select files to view</small>
	        </h2>
	        <form method="POST" action="/fileselect">
	          <input class="btn" type="submit" value="view">
	          <ul class="nav nav-sidebar">
	            <% files.forEach(function(f){ %>
	            <li> <%= f %> <input type="radio" name="filename" value="<%= f %>"></li>
	            <% }); %>
	          </ul>
	        </form>
	      </div>
	      
	      <div id="body" class="col-md-9 main">
	        <h2 class="page-header">Logs </h2>
	        <div id="log_window">
	          <ul id="log_list"></ul>
            <% if(lines){ 
               lines.forEach(function(line){%>
            <li><%= line %></li>
            <% }); } %>
	        </div>
	      </div>
	      
      </div>
    </div>
  </body>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="js/glare-front.js"></script>
</html>
